/**profile.wxss**/
.container {
  height: 100%;
  display: block;
  flex-direction: column;
  justify-content: space-between;
  padding: 0rpx 0rpx;
  box-sizing: border-box;
}

.info-layout {
  height: 240rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 50rpx;
}

.info-icon-layout{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-bottom: 20rpx;
}

.info-icon {
  width: 48rpx;
  height: 48rpx;
}

.head {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.section-line{
  height: 20rpx;
  display: block;
  background: #F7F7FA;
}

.section-title{
    margin-top: 0rpx;
    padding: 20rpx 30rpx;
    font-size: 28rpx;
}

.list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 30rpx;
  margin-left: 10rpx;
  margin-bottom: 20rpx;
}

.list-item {
  display: flex;
  flex-direction: column;
  align-items:center;
  width: 32%;
  margin-bottom: 40rpx;
  padding: 20rpx 0rpx;
}

.add-image {
  width: 180rpx;
  height: 264rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  align-self: center;
}

.info-header-image {
  width:  180rpx;
  height: 264rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.title-text {
  width:  180rpx;
  font-size: 24rpx;
  margin-top: 24rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  text-align: center;
}